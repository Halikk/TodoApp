@model IEnumerable<TodoApp.Models.User>

@{
    ViewData["Title"] = "Kullanıcı Listesi";
}

<h2>Kullanıcı Listesi</h2>
<table>
    <thead>
        <tr>
            <th>Kullanıcı Adı</th>
            <th>Email</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.UserName</td>
                <td>@user.Email</td>
                <td>
                    <a href="@Url.Action("Update", new { id = user.Id })">Düzenle</a> |
                    <a href="@Url.Action("Delete", new { id = user.Id })">Sil</a>
                </td>
            </tr>
        }
    </tbody>
</table>
<a href="@Url.Action("Create")">Yeni Kullanıcı Ekle</a>
