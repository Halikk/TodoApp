@model TodoApp.Models.TodoItem

@{
    ViewData["Title"] = "Todo Sil";
}

<h2>Todo Sil</h2>

<h3>Bu öğeyi silmek istediğinizden emin misiniz?</h3>

<div>
    <h4>TodoItem</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Başlık
        </dt>
        <dd class="col-sm-10">
            @Model.Title
        </dd>

        <dt class="col-sm-2">
            Açıklama
        </dt>
        <dd class="col-sm-10">
            @Model.Description
        </dd>

        <dt class="col-sm-2">
            Tamamlandı mı?
        </dt>
        <dd class="col-sm-10">
            @(Model.IsCompleted ? "Evet" : "Hayır")
        </dd>

        <dt class="col-sm-2">
            Bitiş Tarihi
        </dt>
        <dd class="col-sm-10">
            @Model.DueDate?.ToString("yyyy-MM-dd HH:mm") ?? "Belirlenmedi"
        </dd>
    </dl>

    <form asp-action="Delete" method="post">   
        @Html.AntiForgeryToken() <!-- CSRF koruması için -->
        <input type="hidden" asp-for="TodoItemId" />
        <button type="submit" class="btn btn-danger">Sil</button>
        <a href="@Url.Action("Index")" class="btn btn-secondary">İptal</a>
    </form>
</div>
