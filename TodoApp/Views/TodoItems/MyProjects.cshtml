@model IEnumerable<TodoApp.Models.TodoItem>

<h2>Projelerim</h2>

<table class="table">
    <thead>
        <tr>
            <th>Başlık</th>
            <th>Açıklama</th>
            <th>Tamamlandı mı?</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Title</td>
                <td>@item.Description</td>
                <td>@(item.IsCompleted ? "Evet" : "Hayır")</td>
                <td>
                    <form asp-action="MarkAsCompleted" method="post">
                        <input type="hidden" name="id" value="@item.TodoItemId" />
                        <button type="submit" class="btn btn-primary">
                            @(item.IsCompleted ? "Tamamlanmadı olarak işaretle" : "Tamamlandı olarak işaretle")
                        </button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
